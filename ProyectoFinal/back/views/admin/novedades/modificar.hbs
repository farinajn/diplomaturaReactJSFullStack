<div class="container" style="margin: 100px auto">
    <div>
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
    </div>
    <div class="row">
        <div class="col-6 offset-3">
        <h1>Editar una novedad</h1>
        <form action="/admin/novedades/modificar" method="post">
            <h3>Novedad nro: {{novedad.id}}</h3>
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Titulo" value="{{novedad.titulo}}" name="titulo">
            </div>
            <div class="form-group">
                <textarea type='text' class="form-control" placeholder="Subtitulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="form-group">
                <textarea type='text' class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
            </div>
            <a href="/admin/novedades" class="btn btn-success" >Guardar<i class="fa-solid fa-floppy-disk"></i></a>
            <a href="/admin/novedades" class="btn btn-danger" >Cancelar<i class="fa fa-ban fa-fw"></i></a>
        </form>
        </div>
    </div>
</div>