{{!-- fila 2 --}}
<div class="row">
    <div class="col-7">
        <h3>Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
    <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
</div>
</div>
{{!-- fin fila 2 --}}
{{!-- fila 3 --}}


<div class="row">
        <div class="col">
        <table class="table">
            <thead>
                <tr class="table dark">
                    <th scope="col">#</th> 
                    <th scope="col">Titulo</th>
                    <th scope="col">Subtitulo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                                        <td>{{this.titulo}}</td>
                    <td>{{this.subtitulo}}</td>
                    <td class="text-center">
                        <a href="Editar" class="btn btn-secondary"><i class="fa fa-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{this.id}}" class="btn btn-danger" onclick="return confirm" ("¿Estás seguro de eliminar esta novedad?");><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{!-- fin fila 3 --}}
</div>